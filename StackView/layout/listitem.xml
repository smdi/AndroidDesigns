<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="25dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/imageViewRelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/profile"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"-->
            <!--app:civ_border_width="2dp"-->
            <!--android:layout_weight="2"-->
            <!--android:layout_marginTop="10dp"-->
            <!--app:civ_border_color="#FF000000"/>-->

            <ImageView
                android:id="@+id/profile"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

        </RelativeLayout>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageViewRelay"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_weight="1"
                android:id="@+id/username"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/userwork"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#999999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/userloc"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="India/Andhra Pradesh/Tirupati"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/appriciationno"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#00C9D2"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="244B+"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        android:textColor="#ACACAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Appreciations"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/followersno"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#00C9D2"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.4B+"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        android:textColor="#ACACAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="followers"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/followingno"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#00C9D2"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.1M+"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        android:textColor="#ACACAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="following"
                        />

                </LinearLayout>

            </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/biohead"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Imran"
                />

            <TextView
                android:layout_below="@id/biohead"
                android:layout_weight="1"
                android:id="@+id/bio"
                android:layout_gravity="center_vertical|end"
                android:textColor="#606060"
                android:textSize="14dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_below="@id/bio"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:paddingTop="13dp"
                android:textColor="@drawable/textcolor2"
                android:background="@drawable/custombutton5"
                android:text="Follow"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>
            


        </LinearLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>


    </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>